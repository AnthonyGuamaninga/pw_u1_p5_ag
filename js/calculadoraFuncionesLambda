    const edadesFinales = edades.concat(edades2)
    console.log(edadesFinales)

    for(const dia of diasSemana){
        console.log(dia)
        if(dia === 'Martes'){
            console.log('martes 2x1')
        }
    }


    // Declaracion de Objetos
